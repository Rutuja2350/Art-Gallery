<%- include ("../../partials/header") %>

<div class="container">
    <h1>Post New Blog</h1>
    <div class="row">
        <div style="width: 35%; margin: 25px auto;">
            <form action="/gallery/blog" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" maxlength="286" name="title" placeholder="Title (upto 16 characters)">
                </div>
                <div class="form-group">
                    <input  class="form-control" type="text" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" maxlength="810" name="description" placeholder="Description (upto 800 characters)"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Submitted by">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
                </div>                
            </form>
            <a href="/gallery/blog">Go Back</a>
        </div>        
    </div>
</div>

<%- include ("../../partials/footer") %>