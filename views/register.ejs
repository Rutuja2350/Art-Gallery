<%- include ("partials/header") %>

<h1 class="form_top_head">Sign Up Form</h1>
<div class="container">
    <div class="row">
        <div style="width: 35%; margin: 25px auto;">
            <form action="/gallery/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Sign Up</button>
                </div>     
            </form>
            <a href="/gallery/login">Already has an account</a><br>
        </div>        
    </div>

<%- include ("partials/footer") %>
</div>